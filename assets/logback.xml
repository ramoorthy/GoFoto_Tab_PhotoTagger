<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/sdcard/Android/data/com.poggled.android.phototagger/files/gofoto.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d{dd MMM yyyy HH:mm:ss.SSS},%level,%msg%n</pattern>
    </encoder>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="FILE" />
  </root>
</configuration>